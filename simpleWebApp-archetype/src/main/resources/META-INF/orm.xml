<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

    <named-query name="ALL_CONTACTS_BY_NAME">
        <query>select c from Contacts c where c.name=:name</query>
    </named-query>

    <named-query name="ALL_CONTACTS_SIZE_BY_NAME">
        <query>select count(c) from Contacts c where c.name=:name</query>
    </named-query>
    
    <named-query name="ALL_CONTACTS">
        <query>select c from Contacts c</query>
    </named-query>


</entity-mappings>


        